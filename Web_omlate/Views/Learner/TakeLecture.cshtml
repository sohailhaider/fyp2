                            <div class="hidden-lg hidden-md ct-u-marginBottom30"></div>
                            <div class="col-md-4 pull-right" style="margin-right:40px">
                                <div class="ct-textBox">
                                    <div class="ct-fw-500">
                                       <div class="ct-textBox--heading">
                                           <div class="form-group row">
                                               <input type="hidden" id="displayname" value="@Session["userName"]" />
                                               <input type="hidden" id="group" value="@id" />
                                               <!--<input type="hidden" id="group" value="Model.OfferedCourse.Course.CourseCode" /> -->
                                               <input type="text" id="message" placeholder="Chat Message" class="form-control col-xs-6 col-xs-6 col-xs-6 col-xs-6"/>
                                               <p class="danger" id="errormessage" style="color: red; font-size:13px; display:none">* Type any message</p>
                                               <input type="button" id="sendmessage" class="col-md-3 btn btn-sm btn-primary pull-right" style="margin-top:10px;" value="Send" />
                                           </div>
                                       </div>
                                        <br/><ul id="discussion" style="height: 270px; overflow-y: scroll;"></ul>
                                    </div>
                                </div>
                                <div>

                                    @section scripts {
                                        <!--Script references. -->
                                        <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
                                        <!--Reference the SignalR library. -->
                                        <script src="~/Scripts/jquery-3.1.1.min.js"></script>
                                        <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
                                        <!--Reference the autogenerated SignalR hub script. -->
                                        <script src="~/signalr/hubs"></script>
                                        <!--SignalR script to update the chat page and send messages.-->
                                        <script>
                                            $(function () {
                                                $("#message").keydown(function () {
                                                    $("#errormessage").hide();
                                                });
                                                $('#message').keypress(function (e) {
                                                    if (e.which == 13) {
                                                        $('#sendmessage').click();
                                                    }
                                                });
                                                // Reference the auto-generated proxy for the hub.
                                                var chat = $.connection.chatHub;
                                                var lst = false;
                                                var v;
                                                // Create a function that the hub can call back to display messages.
                                                chat.client.addNewMessageToPage = function (name, message) {
                                                    // Add the message to the page.
                                                    

                                                    if (lst == true) {
                                                        $('#modelbutton').click();
                                                        $('#videoFrame').hide();
                                                        $("#quizIframe").attr('src', "./AttemptQuiz?quizId=" + message);
                                                        window.onbeforeunload = function () {
                                                            return 'Are you sure you want to leave?';
                                                        };
                                                        lst = false;
                                                        return;
                                                    }
                                                    if (message == "-####!###!!!") {
                                                        lst = true;
                                                    } else {
                                                        $('#discussion').append('<li><strong>' + htmlEncode(name)
                                                            + '</strong>: ' + htmlEncode(message) + '</li>');                                                        
                                                    }
                                                    //if (message.match("")) {
                                                        //if ($("#quizIframe").length) {
                                                    //    
                                                    //    return false;
                                                    //}
                                                };
                                                // Set initial focus to message input box.
                                                $('#message').focus();

                                                $.connection.hub.start(function () {
                                                    chat.server.join($('#group').val());
                                                });

                                                // Start the connection.
                                                $.connection.hub.start().done(function () {
                                                    $('#sendmessage').click(function () {
                                                        // Call the Send method on the hub.
                                                        if ($('#message').val() == "") {
                                                            $("#errormessage").show();
                                                            return;
                                                        }
                                                        if ($('#message').val() == "-####!###!!!") {
                                                            alert("Phrase \"-####!###!!!\" is not allowed in chat!");
                                                            $('#message').val('').focus();
                                                            return;
                                                        }
                                                        chat.server.send($('#group').val(), $('#displayname').val(), $('#message').val());
                                                        
                                                        // Clear text box and reset focus for next comment.
                                                        $('#message').val('').focus();
                                                    });
                                                });

                                                

                                            });

                                            // This optional function html-encodes messages for display in the page.
                                            function htmlEncode(value) {
                                                var encodedValue = $('<div />').text(value).html();
                                                return encodedValue;
                                            }
                                        </script>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>