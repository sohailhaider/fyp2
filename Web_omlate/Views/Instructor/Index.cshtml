@model Web_omlate.Models.User
@using Web_omlate.Models
@{
    ViewBag.Title = "Instructor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Nav Bar -->
@Html.Partial("~/Views/Instructor/_InstructorNav.cshtml")

@{
    var courses = (List<OfferedCourse>)ViewBag.offeredCourses;
}
<div class="ct-site--map ct-u-backgroundGradient">
    <div class="container">
        <div class="ct-u-displayTableVertical text-capitalize">
            <div class="ct-u-displayTableCell">
                <span class="ct-u-textBig">
                    @Html.DisplayName("Hi!  " + Model.FirstName + " " + Model.LastName)

                </span>
            </div>
        </div>
    </div>
</div>
<section class="ct-u-backgroundLightGreen">
    <div class="ct-personBox ct-personBox--inline ct-personBox--inlineDescription">
        <div class="container">
            <div class="ct-personMedia ct-u-displayTableVertical">
                <div class="ct-u-displayTableCell">
                    <div class="ct-personImage">
                        <img src="~/assets/images/content/single-member.jpg" alt="person">
                    </div>
                </div>
                <div class="ct-u-displayTableCell">
                    <div class="ct-personName ct-u-marginBottom20">
                        <span class="ct-personName--title ct-fw-700 ct-u-marginBottom20">
                            @Html.DisplayName(Model.FirstName + " " + Model.LastName)
                        </span>
                        <span class="ct-personName--meta ct-fw-600">
                            @Html.DisplayName(Model.Field)
                        </span>
                    </div>
                    <div class="ct-personDescription">
                        <p class="ct-fw-300">
                            Instructor Introduction..........
                        </p>
                        <a class="btn btn-default" href="@Url.Action("EditInfo", "Instructor", new {username = Model.Username})">Edit Your Info</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="color: red"> @ViewBag.msg</div>
    <hr />
    <div class="container ct-u-paddingBoth100">
        <div class="row">
            <div class="col-md-12">
                <div class="ct-textBox ct-textBox--thin">
                    <div class="ct-textBox--heading">
                        <h4 class="ct-fw-700 ct-u-colorMotive">My Offered Courses</h4>
                        <div class="ct-textBox--withNumber">
                            <span class="ct-fw-700">@courses.Count</span>
                        </div>
                    </div>
                    @foreach (var item in courses)
                    {
                        <div class="ct-u-padding70">
                            <div class="ct-productBox ct-productBox--inline ct-u-displayTable ct-u-marginBottom30">
                                <div class="ct-u-displayTableCell">
                                    <div class="ct-productImage">
                                        <a href="@Url.Action("ViewCourseDetails", new { offeredCourseId = item.OfferedCourseID })">
                                            <img src="~/assets/images/content/product-inline1.jpg" alt="Product">
                                        </a>
                                    </div>
                                </div>
                                <div class="ct-u-displayTableCell">
                                    <div class="ct-productDescription">
                                        <a href="@Url.Action("ViewCourseDetails", new { offeredCourseId = item.OfferedCourseID })"><h5 class="ct-fw-600 ct-u-marginBottom10">@(item.Course.CourseCode + " - " + item.Course.CourseTitle)</h5></a>
                                        <span>                                            Course Starting Date: @item.StartingDate  - - -  Course Ending Date: @item.FinishDate <br>
                                        </span>
                                    </div>
                                    <div class="ct-productMeta">
                                        <div class="ct-u-displayTableVertical">
                                            <div class="ct-u-displayTableCell">
                                                <div class="starrr" data-rating='4'></div>
                                            </div>
                                            <div class="ct-u-displayTableCell">
                                                @item.CreditHours
                                            </div>
                                            <div class="ct-u-displayTableCell">
                                                @item.LearnerCount <i class="fa fa-user"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</section>
