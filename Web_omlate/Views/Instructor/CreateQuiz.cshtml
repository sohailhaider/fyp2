@model Web_omlate.Models.Quiz

@{
    ViewBag.Title = "Create Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Nav Bar -->
@Html.Partial("~/Views/Instructor/_InstructorNav.cshtml")
<div class="container ct-u-marginBoth20">
    <div class="row">
        <div class="col-md-12">
            <div class="ct-textBox ct-textBox--thin">
                <div class="ct-textBox--heading">
                    <h4 class="ct-fw-700 ct-u-colorMotive">Create Quiz</h4>
                </div>
                <br/>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.Hidden("InstructorID", (String)ViewBag.instructor)

                        <div class="form-group">
                            @Html.LabelFor(model => model.offeredCourseID, "Course", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.offeredCourseID, (IEnumerable<SelectListItem>)ViewBag.course, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.offeredCourseID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.QuizTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.QuizTitle, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.QuizTitle, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Deadline, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Deadline, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Deadline, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control", @placeholder = "in minutes" } })
                                @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8">
                                <input type="submit" value="Create" class="btn btn-primary pull-right" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div>
        <h5>@Html.ActionLink("Back to List", "ViewQuiz", "Instructor", new { @class= "ct-u-colorMotive" })</h5>
    </div>
</div>
