@model Web_omlate.Models.LectureSchedule

@{
    ViewBag.Title = "Schedule Lecture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("~/Views/Instructor/_InstructorNav.cshtml")
<div></div>

<div class="container ct-u-marginBoth20">
    <div class="row">
        <div class="col-md-12">
            <div class="ct-textBox ct-textBox--thin">
                <div class="ct-textBox--heading">
                    <h4 class="ct-fw-700 ct-u-colorMotive"> Schedule Lecture</h4>
                </div>
                <br/>
                @using (Html.BeginForm("ScheduleLecture", "Instructor", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <div style="color: red">@ViewBag.msg</div>
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                        <div class="form-group">
                            @Html.LabelFor(model => model.OfferedCourseID, "OfferedCourseID", htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.OfferedCourseID, (IEnumerable<SelectListItem>) ViewBag.course, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.OfferedCourseID, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LectureDate, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.LectureDate, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.LectureDate, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LectureTime, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.LectureTime, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.LectureTime, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8">
                                <input type="submit" value="Schedule" class="btn btn-primary pull-right" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>